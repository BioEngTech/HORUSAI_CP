<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".user.healthFragment">

    <!-- TODO: Tab layout -->

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabTextColor="@color/colorWhite"
            app:tabIndicatorColor="@color/colorBlueStrong"
            app:tabIndicatorHeight="2.5dp"
            app:tabSelectedTextColor="@color/colorBlueStrong"
            app:tabTextAppearance="@style/TabLayoutStyle"
            app:tabBackground="@color/transparent"
            android:background="@color/colorMain"
            android:id="@+id/userHealthFragment_TabLayout"/>

    </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/userHealthFragment_ViewPager">
            </android.support.v4.view.ViewPager>

</LinearLayout>